<h3>Write A Review</h3>

<%= form_for [@vendor, @review], :url => url_for(:controller => 'vendor/reviews', :action => "create") do |f| %>
  <%= f.hidden_field :author_name, value: current_user.name, class: "form-control"%>

  <%= f.label :body %>
  <%= f.text_area :body, class: "form-control" %>

  <div class="row">
    <br>
    <div class="pad">
      <%= f.submit "Submit", class: "btn btn-default" %>
    </div>
  </div>
<% end %>
