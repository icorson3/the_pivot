<div class="container">
  <div class="box">
    <div class="text-center">
      <h1>Categories</h1>
    </div><br>
    <% @categories.each do |category| %>
    <div class="col-md-3">
      <div class="text-center">
        <h3> <%= link_to category.name, category_path(category), class: "text-muted order" %> </h3>
      </div>
    </div>
    <% end %>
  </div>
</div>
