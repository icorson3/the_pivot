<div class="container">
  <div class="row">
    <div class="box">
      <div class="col-lg-12">
      <hr class="black-line">
        <h1 class="text-center black"> <%= goal %> </h1>
      <hr class="black-line"><br>
      <div class="row">
        <%= form_for @vendor do |f| %>

          <%= f.label :name, "Full Name" %>
          <%= f.text_field :name, class: "form-control" %>

          <%= f.label :description %>
          <%= f.text_field :description, class: "form-control" %>

          <%= f.label :city %>
          <%= f.text_field :city, class: "form-control" %>

          <%= f.label :state %>
          <%= f.text_field :state, class: "form-control" %>

          <div class="row">
            <br>
            <div class="pad">
              <%= f.submit button, class: "btn btn-default" %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
