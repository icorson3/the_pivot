<div class="container-fluid">
  <div class="box">
    <div class="row">
      <div class="col-lg-12">
        <br>
        <div class="row text-center">
          <h1> <%= @vendor.name %> </h1>
        </div>
        <div class="approval">
          <% if current_super_admin? %>
            <% if @vendor.status == "pending" %>
              <%= link_to "Approve", vendor_path(@vendor, vendor: {status: "approved"}), method: :patch, class: "text-white btn-success btn-sm" %>
              <%= link_to "Reject", vendor_path(@vendor, vendor: {status: "rejected"}), method: :patch, class: "text-white btn-danger btn-sm" %>
            <% elsif @vendor.status == "approved" %>
              <%= link_to "Retire", vendor_path(@vendor, vendor: {status: "retired"}), method: :patch, class: "text-white btn-danger btn-sm" %>
            <% elsif @vendor.status == "retired" %>
              <%= link_to "Restore", vendor_path(@vendor, vendor: {status: "approved"}), method: :patch, class: "text-white btn-danger btn-sm" %>
            <% end %>
          <% end %>
        </div>
        </h1>
        <hr class="black-line">
        <h2 class="row text-center"> <%= @vendor.description %> </h2>
      </div>
    </div>
    <div class="row">
      <div class="text-center">
        <% if @vendor.status == "approved" %>
          <h3> <%= link_to "Items", vendor_items_path(@vendor.slug), class: "text-muted order" %> </h3>
        <% end %>
    <hr class="black-line">
    <div class="row">
      <div class="col-md-4 text-center">
        <h3>State: <%= @vendor.state %></h3>
      </div>
      <div class="col-md-4 text-center">
        <h3>City: <%= @vendor.city %></h3>
      </div>
      <div class="col-md-4 text-center">
        <h3>Status: <%= @vendor.status.capitalize %></h3>
      </div>
    </div>
  </div>
</div>
