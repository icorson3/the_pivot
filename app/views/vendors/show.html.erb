<div class="container-fluid">
  <div class="box">

    <div class="row">
      <div class="col-lg-12">
        <br>
        <div class="row text-center">
          <h1> <%= @vendor.name %></h1>
          <div class="approval">
            <%= render partial: "vendor_status" %>
          </div>
        </div>
        <div class="add-item">
          <% if current_super_admin? || current_user && current_user.vendor == @vendor %>
            <%= link_to "Add Item to Store", new_vendor_item_path(@vendor.slug), class: "btn btn-default" %>
          <% end %>
        </div>
        <hr class="black-line">
        <h2 class="row text-center"> <%= @vendor.description %> </h2>
      </div>
    </div>

    <div class="row">
      <div class="text-center">
        <% if @vendor.status == "approved" %>
          <h3> <%= link_to "Items", vendor_items_path(@vendor.slug), class: "text-muted order" %> </h3>
        <% end %>
        <hr class="black-line">
        <div class="row">
          <div class="col-md-4 text-center">
            <h3>State: <%= @vendor.state %></h3>
          </div>
          <div class="col-md-4 text-center">
            <h3>City: <%= @vendor.city %></h3>
          </div>
          <div class="col-md-4 text-center">
            <h3>Status: <%= @vendor.status.capitalize %></h3>
          </div>
        </div>
      </div>
    </div>



    <h3>Reviews(<%= @vendor.reviews.count %>)</h3>
    <% if current_user %>
      <%= render partial: 'reviews/form' %>
    <% end %>
    <hr class="black-line">
    <%= render partial: 'vendors/review', collection: @vendor.reviews %>
  </div>
</div>
