<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <br>
      <h1 class="row text-center"> <%= @vendor.name %> </h1>
      <hr class="black-line">
      <h2 class="row text-center"> <%= @vendor.description %> </h2>
    </div>
  </div>
  <div class="row">
    <div class="text-center">
      <h3> <%= link_to "Items", vendor_items_path(@vendor.slug), class: "text-muted order" %> </h3>
  <hr class="black-line">
  <div class="row">
    <div class="col-md-4 text-center">
      <h3>State: <%= @vendor.state %></h3>
    </div>
    <div class="col-md-4 text-center">
      <h3>City: <%= @vendor.city %></h3>
    </div>
    <div class="col-md-4 text-center">
      <h3>Status: <%= @vendor.status.capitalize %></h3>
    </div>
  </div>
</div>
