<div class="container">
  <div class="row">
    <div class="box">
      <div class="col-lg-12">
        <h2 class="text-center black"> Update Account </h2>
      <br>
      <div class="row" id="user-update">
        <%= form_for @user do |f| %>

          <%= f.label :username %>
          <%= f.text_field :username, :required => true, class: "form-control general-form" %>

          <%= f.label :password %>
          <%= f.password_field :password, :required => true, class: "form-control general-form" %>

          <%= f.label :email %>
          <%= f.text_field :email, class: "form-control general-form" %>

          <%= f.label :name, "Full Name" %>
          <%= f.text_field :name, class: "form-control general-form" %>

          <%= f.label :address %>
          <%= f.text_field :address, class: "form-control general-form" %>

          <%= f.label :city %>
          <%= f.text_field :city, class: "form-control general-form" %>

          <%= f.label :state %>
          <%= f.text_field :state, class: "form-control state-form" %>

          <%= f.label :zip %>
          <%= f.text_field :zip, class: "form-control general-form" %>

          <div class="row">
            <br>
            <div class="pad">
              <%= f.submit "Update Information", class: "btn btn-default" %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
