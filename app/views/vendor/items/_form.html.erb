<div class="container">
  <div class="row">
    <div class="box">
      <div class="col-lg-12">
        <h2 class="text-center black"> <%= status %> for <%= @vendor.name %></h2>
      <br>
      <div class="row" id="<%= source %>">
        <%= form_for [@vendor, @item] do |f| %>

        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control general-form" %>

        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control description-form" %>

        <%= f.label :price %>
        <%= f.number_field :price, :step => 0.01, class: "form-control general-form" %>

        <%= f.label :image %>
        <%= f.text_field :image, class: "form-control general-form" %>
        <br>
        <%= f.label :category %>
        <%= f.collection_select(:category_id, @categories, :id, :name, :include_blank => "Select Category")%>

          <div class="row">
            <br>
            <div class="pad">
              <%= f.submit status, class: "btn btn-default" %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
