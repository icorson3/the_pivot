<div class="container">
  <div class="row">
    <div class="box">
      <div class="col-lg-12">
      <hr class="black-line">
        <h1 class="text-center black">Edit Item for <%= @vendor.name %></h1>
      <hr class="black-line"><br>
      <div class="row">
        <%= form_for [@vendor, @item] do |f| %>

        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>

        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control" %>

        <%= f.label :price %>
        <%= f.number_field :price, :step => 0.01, class: "form-control" %>

        <%= f.label :image %>
        <%= f.text_field :image, class: "form-control" %>
        <br>
        <%= f.label :category %>
        <%= f.collection_select(:category_id, @categories, :id, :name, :include_blank => "Select Category")%>

          <div class="row">
            <br>
            <div class="pad">
              <%= f.submit "Update Item", class: "btn btn-default" %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
