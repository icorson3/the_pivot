<div class="container">
  <div class="box">
    <h1><%= @vendor.name %>'s Orders</h1>
    <table class = "table" id="vendor-order-table">
      <th>Name</th>
      <th>Created At</th>
      <th>Quantity</th>
      <th>Subtotal</th>
      <th>User</th>
    <% @order_items.each do |order_item| %>
      <tr>
        <td><%= order_item.item.name %></td>
        <td><%= order_item.order.created_at %></td>
        <td><%= order_item.quantity %></td>
        <td><%= order_item.subtotal %></td>
        <td><%= order_item.order.user.username %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
