<h1> All Orders </h1>

<table class="table">
  <% if @orders.empty? %>
  <h2> You have no orders...</h2>
  <% else %>
  <th>Order Number</th>
  <th>Time Placed</th>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.id, order_path(order) %></td>
        <td><%= order.created_at %></td>
      </tr>
    <% end %>
  <% end %>
</table>
