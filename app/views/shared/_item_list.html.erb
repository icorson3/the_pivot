<div class="container">
  <div class="box">
    <div class="text-center">
      <h1> <%= title %> </h1>
    </div>
    Items Per Page <%= select_tag :per_page, options_for_select([15, 30, 60], params[:per_page]),
    :onchange => "if(this.value){window.location='?per_page='+this.value;}" %>

    <%= render partial: "shared/filter" %>

    <div class="row">
      <div class="center">
        <% @items.each do |item| %>
        <div class="col-md-4">
          <div class="item" id="item-card" data-vendor="<%= item.vendor.name %>" data-category="<%= item.category.name %>">
            <%= link_to (image_tag item.image, class: "img-thumbnail"), vendor_item_path(item.vendor.slug, item), class: "#{item.name}-click" %>
            <div id="card-text">
              <p><%= item.name %> - $<%= item.price %></p>
              <%= button_to "Add to cart", cart_items_path(id: item), class: "btn btn-lg btn-block" %>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>

    <%= will_paginate @items %>
  </div>
</div>
