<div class="container">
  <div class="row">
    <div class="box">
      <div class="col-lg-12">
      <hr class="black-line">
        <h1 class="text-center black">Login </h1>
      <hr class="black-line"><br>
      <div class="row">
        <%= form_for(:session, url: login_path) do |f| %>

          <%= f.label :username %>
          <%= f.text_field :username, :required => true, class: "form-control" %>

          <%= f.label :password %>
          <%= f.password_field :password, :required => true, class: "form-control" %>

          <div class="row">
            <br>
            <div class="pad">
              <%= f.submit "Login", class: "btn btn-primary" %>
              <%= link_to "Create Account", new_user_path, class: "btn btn-primary"  %><br><br>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
